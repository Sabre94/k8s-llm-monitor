FROM golang:1.21-alpine AS builder

ENV GOTOOLCHAIN=auto

WORKDIR /app

RUN apk add --no-cache git ca-certificates tzdata

# 复制 go.mod / go.sum 并预下载依赖
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码并构建 Agent 二进制
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o bin/uav-agent ./cmd/uav-agent

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata curl

WORKDIR /app

COPY --from=builder /app/bin/uav-agent ./uav-agent

# 默认端口
EXPOSE 9090

CMD ["/app/uav-agent"]
