FROM golang:1.21-alpine AS builder

WORKDIR /app

# 安装构建依赖
RUN apk add --no-cache git

# 复制go mod文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建UAV Agent
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o uav-agent ./cmd/uav-agent

# 运行阶段
FROM alpine:latest

# 安装运行时依赖（网络工具）
RUN apk --no-cache add ca-certificates curl busybox-extras

WORKDIR /root/

# 从构建阶段复制二进制文件
COPY --from=builder /app/uav-agent .

# 暴露端口
EXPOSE 9090

# 启动命令
CMD ["./uav-agent"]
